{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Md Editor",
  "version": "0.1.0",
  "identifier": "com.pedroaldeamas.md-editor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Md Editor",
        "width": 1280,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self'; img-src 'self' asset: data: http: https:; style-src 'self' 'unsafe-inline'; script-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "macOS": {
      "minimumSystemVersion": "13.0"
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown Document",
        "role": "Editor"
      }
    ]
  }
}
